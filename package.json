{
  "name": "@formity/monorepo",
  "private": true,
  "version": "0.0.0",
  "license": "MIT",
  "type": "module",
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "description": "React multi-step forms where logic has no limits - for any use case",
  "repository": {
    "type": "git",
    "url": "https://github.com/martiserra99/formity"
  },
  "homepage": "https://formity.app/",
  "scripts": {
    "preinstall": "only-allow npm",
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "react:cy:run": "npm run cy:run --workspace=react-app",
    "react:cy:open": "npm run cy:open --workspace=react-app",
    "changeset": "changeset",
    "changeset:version": "changeset version",
    "changeset:publish": "changeset publish",
    "clean": "npm -r --parallel exec rimraf dist .turbo node_modules"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.11",
    "@eslint/js": "^9.13.0",
    "@rollup/plugin-node-resolve": "^16.0.0",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^12.1.1",
    "@swc/core": "^1.10.3",
    "cypress": "^13.17.0",
    "eslint": "^9.13.0",
    "eslint-plugin-react": "^7.37.1",
    "globals": "^15.11.0",
    "only-allow": "^1.2.1",
    "rimraf": "^6.0.1",
    "rollup": "^4.24.0",
    "tslib": "^2.8.0",
    "turbo": "^2.3.3",
    "typescript": "^5.6.3",
    "typescript-eslint": "^8.11.0",
    "vitest": "^2.1.8"
  },
  "optionalDependencies": {
    "@rollup/rollup-linux-x64-gnu": "^4.29.1"
  },
  "packageManager": "npm@10.8.2"
}
